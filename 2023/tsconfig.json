{
    "exclude": ["tests"],
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "rootDir": "src",
        "paths": { "#root/*": ["./src/*"] }
    }
}
